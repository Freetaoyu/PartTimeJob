<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:id="@+id/mycalendarscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="29dp" >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="29dp"
                    android:background="@null"
                    android:src="@drawable/xcap_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="行程"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="编辑"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/qianblue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/mycalendarlay01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="日" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="一" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="二" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="三" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="四" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="五" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="19dp"
                            android:background="@color/qianblue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="center"
                            android:text="六" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/mycal_text01"
                    android:layout_width="2dp"
                    android:layout_height="19dp"
                    android:layout_toRightOf="@+id/mycalendarlay01"
                    android:background="@color/qianblue" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/qianblue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/mycal_t01"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L01"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t01"
                    android:background="@color/black"
                    android:orientation="vertical" >

                    
                </LinearLayout>

                <TextView
                    android:id="@+id/mycal_t02"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L01"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L02"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t02"
                    android:background="@color/black"
                    android:orientation="vertical" >

                    
                </LinearLayout>

                <TextView
                    android:id="@+id/mycal_t03"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L02"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L03"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t03"
                    android:background="@color/black"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/mycal_t04"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L03"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L04"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t04"
                    android:background="@color/black"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/mycal_t05"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L04"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L05"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t05"
                    android:background="@color/black"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/mycal_t06"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L05"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L06"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t06"
                    android:background="@color/black"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/mycal_t07"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_L06"
                    android:background="@color/qianblue" />

                <LinearLayout
                    android:id="@+id/mycal_L07"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycal_t07"
                    android:background="@color/black"
                    android:orientation="vertical" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>