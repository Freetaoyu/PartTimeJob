<?xml version="1.0" encoding="utf-8"?>
<com.clv.parttimejobs.view.ui.customview.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:padding="0dp"
    android:id="@+id/sildingFinishLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clv.parttimejobs.activity.minelayout.contactus.AboutSoftware" >
    <ScrollView 
        android:id="@+id/about_soft_scrollview"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/about_us_rey01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/about_us_return_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/mylogin_icon_back_nor" />

         <ImageButton
            android:id="@+id/about_soft_return_button"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" 
            android:textSize="18sp"
            android:text="关于软件"/>
    </RelativeLayout>

     <LinearLayout
        android:id="@+id/about_us_lin01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/about_us_rey01"
        android:background="@color/gray_2"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_icon_logo_nor" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海岛兼职"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.8.0版"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/about_us_reylay01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/about_us_lin01"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/white"
         >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            />
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="投资入驻"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_reylay02"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/about_us_reylay01"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            />
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="去评分"
            android:textSize="18sp" />

    </RelativeLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/qianblue"
        android:background="@null"
        android:layout_below="@+id/about_us_reylay02"
        android:layout_marginTop="95dp"
        android:textSize="12sp"
        android:text="海岛兼职使用协议"
        />
    </RelativeLayout>
    </ScrollView>
</com.clv.parttimejobs.view.ui.customview.SildingFinishLayout>
