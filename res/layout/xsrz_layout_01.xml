<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/xsrz_rey01"
        android:layout_width="match_parent"
        android:layout_height="34dp" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/xsrz_textview01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入学年份"
            android:focusable="true" 
            android:focusableInTouchMode="true" 
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/xsrz_edittext01"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@+id/xsrz_textview01"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请如实填写"
             android:singleLine="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textSize="12sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/xsrz_textview02"
            android:text="学号"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/xsrz_edittext04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="学号"
            android:layout_marginRight="30dp"
            android:textSize="12sp"
             android:singleLine="true"
             android:inputType="number"
             android:maxLines="10"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/xsrz_textview02"
            />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/xsrz_textview_txian02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/xsrz_rey01"
        android:background="#ececec"/>

    <LinearLayout
        android:id="@+id/xsrz_rey02"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_below="@+id/xsrz_textview_txian02"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
         <TextView
            android:id="@+id/xsrz_textview03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业"
             android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/xsrz_edittext02"
            android:paddingLeft="6dp"
            android:layout_toRightOf="@+id/xsrz_textview03"
            android:layout_marginLeft="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请如实填写"
            android:singleLine="true"
            android:layout_marginRight="22dp"
            android:background="@null"
            android:textSize="12sp"
            />
        </RelativeLayout>

         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1" >

        <TextView
            android:id="@+id/xsrz_textview05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="最高学历"/>
        <Spinner
            android:id="@+id/xsrz_spinner"
            android:layout_toRightOf="@+id/xsrz_textview05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:popupBackground="#f0000000"
            />
    </RelativeLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/xsrz_textview03_kong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
          android:layout_below="@+id/xsrz_rey02"
        android:background="#ececec"
        />
     <RelativeLayout
        android:id="@+id/xsrz_rey03"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/xsrz_textview03_kong"
        >
        <TextView
            android:id="@+id/xsrz_textview04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校名称"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/xsrz_edittext03"
            android:paddingLeft="9dp"
            android:layout_toRightOf="@+id/xsrz_textview04"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请如实填写"
             android:singleLine="true"
            android:background="@null"
            android:textSize="12sp"
            />
        
     </RelativeLayout>
      <TextView
        android:id="@+id/xsrz_textview05_kong"
        android:layout_width="match_parent"
        android:layout_height="1dp"
          android:layout_below="@+id/xsrz_rey03"
        android:background="#ececec"
        />
     <ImageButton
         android:id="@+id/xsrz_imagebutton01"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/myidcard_pic_putinpic_nor"
         android:background="@null"
         android:layout_below="@+id/xsrz_textview05_kong"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"/>
     <ImageButton
         android:id="@+id/xsrz_imagebutton02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/myidcard_pic_putinpicover_nor"
         android:background="@null"
         android:layout_marginTop="8dp"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/xsrz_imagebutton01"/>
     <ImageButton
         android:id="@+id/xsrz_imagebutton03"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/selected_button_submit"
         android:background="@null"
         android:layout_below="@+id/xsrz_imagebutton02"
         android:layout_marginTop="40dp"
         android:layout_centerHorizontal="true"
         />
     <TextView
         android:layout_below="@+id/xsrz_imagebutton03"
         android:layout_width="match_parent"
         android:layout_height="20dp"/>
</RelativeLayout>