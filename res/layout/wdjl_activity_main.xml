<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <com.clv.parttimejobs.view.ui.customview.LazyScrollView
        android:id="@+id/mycredit_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/mycredit_rey01"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/about_us_return_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/mylogin_icon_back_nor" />

                <ImageButton
                    android:id="@+id/mycreadit_return_button"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="个人信息"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mycredit_rey02"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:layout_below="@+id/mycredit_rey01" >

                <ImageView
                    android:id="@+id/mycredit_imagebutton"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="47dp"
                    android:src="@drawable/myjjxx_pic_nrtx_nor" />

                <TextView
                    android:id="@+id/mycredit_textview"
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mycredit_imagebutton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mycredit_textview"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/myimageview01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/myjlxx_pic_jbxx_long" />

                    <ImageButton
                        android:id="@+id/myimageview02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/myjlxx_pic_jyxl_short" />

                    <ImageButton
                        android:id="@+id/myimageview03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/myjlxx_pic_jntc_short" />

                    <ImageButton
                        android:id="@+id/myimageview04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/myjlxx_pic_grfc_short" />
                </LinearLayout>
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/mycredit_vp_container"
                android:layout_below="@+id/mycredit_rey02" 
                android:layout_width="match_parent"
                android:layout_height="400dp" />
        </RelativeLayout>
    </com.clv.parttimejobs.view.ui.customview.LazyScrollView>

</RelativeLayout>