<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:paddingBottom="@dimen/activity_vertical_margin"  
    android:paddingLeft="@dimen/activity_horizontal_margin"  
    android:paddingRight="@dimen/activity_horizontal_margin"  
    android:paddingTop="@dimen/activity_vertical_margin"  
    android:padding="0dp"
    tools:context=".JobXQ_activity" >  
      
    <android.support.v4.view.ViewPager  
        android:id="@+id/viewpager"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/rey_wel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/radiobutton_wecl1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/selected_button_welcome"
            />
        <RadioButton
            android:id="@+id/radiobutton_wecl2"
            android:layout_toRightOf="@+id/radiobutton_wecl1"
            android:layout_marginLeft="9dp"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:button="@null"
            android:background="@drawable/selected_button_welcome"
            />
        <RadioButton
            android:id="@+id/radiobutton_wecl3"
             android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/radiobutton_wecl2"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:button="@null"
            android:background="@drawable/selected_button_welcome"
            />
        <RadioButton
            android:id="@+id/radiobutton_wecl4"
             android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/radiobutton_wecl3"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:button="@null"
            android:background="@drawable/selected_button_welcome"
            />
        </RelativeLayout>
    <ImageButton
        android:id="@+id/gotoland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/rey_wel"
        android:src="@drawable/gotolegure"
        android:visibility="gone"
        android:background="@null"
         />
      
</RelativeLayout>  