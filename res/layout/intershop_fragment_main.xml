<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical" >

 <LinearLayout 
     android:id="@+id/intet_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_6" />

    <RadioGroup
        android:id="@+id/inter_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/inter_radiobutton_1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/select_order_button_text"
            android:background="@drawable/select_orader_button_click"
            android:text="待审核" />

        <RadioButton
            android:id="@+id/inter_radiobutton_2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/select_order_button_text"
            android:gravity="center"
            android:background="@drawable/select_orader_button_click"
            android:text="已录取" />

        <RadioButton
            android:id="@+id/inter_radiobutton_3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/select_order_button_text"
            android:background="@drawable/select_orader_button_click"
            android:text="待结算" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray_1" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/shop"
        android:layout_below="@+id/intet_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    </FrameLayout>

   
</RelativeLayout>