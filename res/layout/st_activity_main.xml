<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#dcdcdc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ST_mainActivity" >

    <RelativeLayout
        android:id="@+id/sz_rey01"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >


        <ImageButton
            android:id="@+id/sz_return_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/myset_icon_back_nor" 
            android:background="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sz_textview01"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/sz_rey01"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/sz_rey02"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sz_textview01" >

        <Button
            android:id="@+id/st_button_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_press" />

        <TextView
            android:id="@+id/sz_textview02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="修改密码"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/sz_rey04_imagebutton01"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/myset_icon_more_nor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/sz_textview03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sz_rey02"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/sz_rey03"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sz_textview03" >

        <Button
             android:id="@+id/st_button_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_press" />

        <TextView
            android:id="@+id/sz_textview04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="消息提醒"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/sz_rey04_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:button="@drawable/selector_button_checkbutotn"/>
    </RelativeLayout>

    
    <TextView
        android:id="@+id/sz_textview05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sz_rey03"
        android:background="#dcdcdc" />
    <RelativeLayout
        android:id="@+id/sz_rey04"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sz_textview05" >

        <Button
             android:id="@+id/st_button_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_press" />

        <TextView
            android:id="@+id/sz_textview06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="清除緩存"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/sz_rey04_imagebutton02"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/myset_icon_more_nor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"/>
        <TextView
            android:id="@+id/sz_rey04_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.28MB"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sz_rey04_imagebutton02"
            android:layout_marginRight="7dp"
            android:textColor="#bcbcbc"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/sz_textview07"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sz_rey04"
        android:background="#dcdcdc" />
     <RelativeLayout
        android:id="@+id/sz_rey05"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sz_textview07" >

        <Button
             android:id="@+id/st_button_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_press" />

        <TextView
            android:id="@+id/sz_textview08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="账号安全"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/sz_rey04_imagebutton03"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/myset_icon_more_nor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"/>
    </RelativeLayout>
    
     <RelativeLayout
         android:gravity="center"
         android:layout_below="@+id/sz_rey05"
         android:layout_width="match_parent"
         android:layout_marginTop="52dp"
         android:background="#ffffff"
         android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出登录"
            />
        <Button 
             android:id="@+id/st_button_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
     </RelativeLayout>
</RelativeLayout>